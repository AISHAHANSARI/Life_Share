                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="2dp"
                            android:layout_weight="1"
                            android:background="#D5A2DD"
                            android:fontFamily="@font/alegreya_sans_medium"
